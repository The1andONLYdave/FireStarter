<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/semitransparentbackground_light">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/appsettingsbackground"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings:"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="bold" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/appsettingboxsize"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="@dimen/appsettingboxsize"
                android:layout_height="@dimen/appsettingboxsize"
                android:contentDescription="@string/AppName"
                android:focusable="false"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_gallery" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/appsettingsoptionpadding"
                android:layout_marginRight="@dimen/appsettingsoptionpadding"
                android:layout_marginTop="20dp"
                android:background="@color/whitedivider"
                android:focusable="false" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/appSort"
                android:layout_width="@dimen/appsettingboxsize_small"
                android:layout_height="@dimen/appsettingboxsize_small"
                android:layout_gravity="center"
                android:background="@drawable/appsettingsselector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/settingsiconsize"
                    android:layout_height="@dimen/settingsiconsize"
                    android:layout_gravity="center"
                    android:contentDescription="@string/AppName"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/app_sort" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center|bottom"
                    android:text="@string/appsettingssort" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/appsettingsoptionpadding"
                android:layout_marginTop="20dp"
                android:background="@color/whitedivider"
                android:focusable="false" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/appSettings"
                android:layout_width="@dimen/appsettingboxsize_small"
                android:layout_height="@dimen/appsettingboxsize_small"
                android:layout_gravity="center"
                android:background="@drawable/appsettingsselector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="10dp"
                android:selectable="true">

                <ImageView
                    android:layout_width="@dimen/settingsiconsize"
                    android:layout_height="@dimen/settingsiconsize"
                    android:layout_gravity="center"
                    android:contentDescription="@string/AppName"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/app_settings" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center|bottom"
                    android:text="@string/appsettings_settings" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/appsettingsoptionpadding"
                android:layout_marginRight="@dimen/appsettingsoptionpadding"
                android:layout_marginTop="20dp"
                android:background="@color/whitedivider"
                android:focusable="false" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>